													<%#= link_to "Sign up", new_user_registration_path, :class => 'button'  %> |
												  <%#= link_to "Login", new_user_session_path, :class => 'navbar-link'  %>

												<% end %>
											</div>
										</div>
											<!--  </div>  -->

                    <div class="span4">
										<div class="higher-line">
											<!-- Moving "My Account" to be on same row as Logo --> 

											<a href="/account" class="gray-link">My account</a>
										</div>
										</div>
			</div>
		</div> <!-- right side of brand row -->

			</div>
