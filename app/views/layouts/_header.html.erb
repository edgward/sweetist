							<div class="cart-container" id="cartContainer">
							 	<% if @order %>
									<% @order = Order.all %>
							 	<% else %>
									<% @order = Order.new %>
								<% end %>

								<% @cart = Cart.all %>

								<div class="cart">

                        <p class="items">CART <span class="dark-clr">(<%=@cart.length %>)</span></p>
												<!-- <p class="dark-clr hidden-tablet">$1816.90</p> -->
                        <a href="checkout-step-1.html" class="btn btn-danger">
